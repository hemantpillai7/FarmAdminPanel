<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <ImageView
                    android:id="@+id/orderImg"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="4"
                    android:padding="8dp"
                    android:src="@drawable/noimg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:weightSum="7">

                    <TextView
                        android:id="@+id/orderProName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/aclonica"
                        android:paddingVertical="4dp"
                        android:text="Product Name "
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:paddingVertical="4dp"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:fontFamily="@font/aclonica"
                            android:text="Qty "
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/orderProQty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/aclonica"
                            android:text="Hemant "
                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:fontFamily="@font/aclonica"
                    android:paddingVertical="4dp"
                    android:text="User Name"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/orderUserName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:fontFamily="@font/aclonica"
                    android:paddingVertical="4dp"
                    android:text="Hemant "
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:fontFamily="@font/aclonica"
                    android:paddingVertical="4dp"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/orderUserAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:fontFamily="@font/aclonica"
                    android:maxLines="3"
                    android:paddingVertical="4dp"
                    android:text="nksfd klsf jas;fl ojajf  "
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:fontFamily="@font/aclonica"
                    android:paddingVertical="4dp"
                    android:text="Phone No"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/orderUserNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:fontFamily="@font/aclonica"
                    android:paddingVertical="4dp"
                    android:text="9876543210 "
                    android:textSize="12dp" />


            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#818C8585" />

            <LinearLayout
                android:id="@+id/LayoutButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="-5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/orderAccept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/aclonica"
                    android:text="Accepted Order"
                    android:textColor="@color/button_background_txtcolor_two"
                    android:background="@drawable/blankbg"
                    android:backgroundTint="@color/button_background_color_two"
                    android:textAlignment="center"
                    android:textSize="13dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#818C8585" />

                <Button
                    android:id="@+id/orderReject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/aclonica"
                    android:text="Cancel Order"
                    android:textColor="@color/button_background_txtcolor_two"
                    android:background="@drawable/blankbg"
                    android:backgroundTint="@color/button_background_color_two"
                    android:textAlignment="center"
                    android:textSize="13dp" />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>