<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.Material3.DayNight.NoActionBar"
    tools:context=".Fragment.VideoFragment">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video Upload Form"
        android:textAlignment="center"
        android:fontFamily="@font/aclonica"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/vdoImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/noimg" />

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/vdoImgUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button3"
            android:padding="20dp"
            android:text="Add Thumbnail" />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Video Lable"
            app:boxStrokeColor="@color/AppColor"
            app:endIconMode="clear_text"
            app:endIconTint="@color/AppColor"
            app:hintTextColor="@color/AppColor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vdoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/AppColor"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:hint="Paste Video Link"
            app:boxStrokeColor="@color/AppColor"
            app:endIconMode="clear_text"
            app:endIconTint="@color/AppColor"
            app:hintTextColor="@color/AppColor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vdoLnk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/vdoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_button2"
            android:paddingHorizontal="25dp"
            android:paddingVertical="15dp"
            android:text="Upload Video"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>



</RelativeLayout>